<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/j_date"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="8888.88.88星期一"
            android:textColor="#111"
            android:textSize="36dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/j_user"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="充值人：user1"
                android:textColor="#111"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/j_chepai"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="车牌号：辽A10001"
                android:textColor="#111"
                android:textSize="35dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/j_money"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="充值：999"
            android:textColor="#111"
            android:textSize="35dp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="充值时间"
                android:textColor="#111"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/j_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="8888.88.88 88:88"
                android:textColor="#111"
                android:textSize="35dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>